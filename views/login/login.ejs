<!DOCTYPE html>
<html>
<% include ../partials/head %>

<body>

<% include ../partials/navbar %>
<% include ../partials/header %>

<!-- main start-->

<!-- views/login/login.ejs -->
<div class="container home home-login">
  <div class="message"><%= loginMessage %></div>
  <div class="buttons">
    <button class="btn btn-default" onclick="location.href='/'">Home</button>
    <button class="btn btn-default float_right" onclick="location.href='/users/new'" >회원가입</button>
  </div>
  <h3 class="contentBoxTop">로그인</h3>
  <form class="login-form form-horizontal" "checkValidation" action="/login" method="post">
    <div class="contentBox">>
      <div class="form-group">
          <label for="username" class="col-sm-3 control-label">아이디</label>
          <div class="col-sm-9">

          <input class="form-control" type="text" name="username" cvRqErrMsg="Please enter your login username." cvRqErrTo="#cvRqErrusername" value="">
          <div id="cvRqErrusername" class="message"></div>
        </div>
      </div>

      <div class="form-group">
        <label for="password" class="col-sm-3 control-label">비밀번호</label>
        <div class="col-sm-9">
        <input class="form-control" type="password" name="password" cvRqErrMsg="Please enter your password." cvRqErrTo="#cvRqErrPassword" value="">
        <div id="cvRqErrPassword" class="message"></div>
        </div>
        <% loginError.forEach(function(e){ %>
        <div class="message"><%= e %><div>
        <% }) %>
        </div>
    <div class="buttons">
      <input class="btn btn-default" type="submit" value="확인">
    </div>

    </div> <!-- end of contentBox -->
  </form> <!-- end of form -->

<!-- main end -->
    </div><!--login end -->
    <footer>
      <% include ../partials/footer %>
    </footer>
      <% include ../partials/scripts %>
  </body>
</html>
