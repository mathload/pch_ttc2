<!DOCTYPE html>
<html>
<% include ../partials/head %>

<body>

<% include ../partials/navbar %>
<% include ../partials/header %>

      <div class="container user user-new">
<!-- main start-->

<!-- views/users/new.ejs -->
<div class="contentBox">>
  <div class="buttons">
    <button class="btn btn-default" onclick="location.href='/'">Home</button>
  </div>
  <h3 class="contentBoxTop">회원가입</h3>

  <form class="user-form form-horizontal" action="/users" method="post">

      <fieldset>
      <div class="form-group">
        <label for="username" class="col-sm-4 control-label">아이디*</label>
        <div class="col-sm-8">
        <input class="form-control" type="text" name="user[username]" cvRqErrMsg="username is required." cvRqErrTo="#cvErrusername" value="<%= formData?formData.username:"" %>">
        <div id="cvErrusername" class="message"><%= usernameError?usernameError:"" %></div>
        </div>
      </div>

      <div class="form-group">
        <label for="email" class="col-sm-4 control-label">이메일*</label>
        <div class="col-sm-8">
        <input class="form-control" type="text" name="user[email]" cvRqErrMsg="Email is required." cvRqErrTo="#cvErrEmail" value="<%= formData?formData.email:"" %>">
        <div id="cvErrEmail" class="message"><%= emailError?emailError:"" %></div>
        </div>
    </div>

      <div class="form-group">
        <label for="password" class="col-sm-4 control-label">비밀번호*</label>
        <div class="col-sm-8">
        <input class="form-control" type="password" name="user[password]" cvRqErrMsg="Password is required." cvRqErrTo="#cvErrPassword"
          cvMatW="#cvMatWPassword" cvMatErrMsg="Password confirmation doesn't match." cvMatErrTo="#cvErrPasswordConfirmation" value="">
        <div id="cvErrPassword" class="message"><%= passwordError?passwordError:"" %></div>
        </div>
    </div>

      <div class="form-group">
        <label for="passwordConfirmation" class="col-sm-4 control-label">비밀번호확인*</label>
        <div class="col-sm-8">
        <input class="form-control" id="cvMatWPassword" type="password" name="user[passwordConfirmation]" value="">
        <div id="cvErrPasswordConfirmation" class="message"></div>
        </div>
      </div>

      <p><small>*필수기입항목</small></p>
    </div>
    <div class="buttons">
      <button class="btn btn-default" type="submit">가입</button>
    </div>
  </form>
</div>

<!-- main end -->
    </div><!--users end -->
    <footer>
      <% include ../partials/footer %>
    </footer>
      <% include ../partials/scripts %>
  </body>
</html>
